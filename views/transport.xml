<odoo>
    <record id="view_school_transport_route_search" model="ir.ui.view">
        <field name="name">school.transport.route.search</field>
        <field name="model">school.transport.route</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="bus_number"/>
                <field name="driver_name"/>
            </search>
        </field>
    </record>

    <record id="view_school_transport_route_tree" model="ir.ui.view">
        <field name="name">school.transport.route.tree</field>
        <field name="model">school.transport.route</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="bus_number"/>
                <field name="driver_name"/>
                <field name="capacity"/>
                <field name="total_distance" string="Distance (km)"/>
                <field name="student_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <record id="view_school_transport_route_form" model="ir.ui.view">
        <field name="name">school.transport.route.form</field>
        <field name="model">school.transport.route</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="compute_route_geometry" type="object" string="Update Route Geometry" class="btn-primary"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Route Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="bus_number"/>
                            <field name="driver_name"/>
                            <field name="capacity"/>
                        </group>
                        <group>
                            <field name="total_distance" string="Total Distance (km)"/>
                            <field name="map_center_lat" invisible="1"/>
                            <field name="map_center_lon" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="student_ids" widget="many2many_tags"/>
                    </group>
                    <notebook>
                        <page string="Route Stops">
                            <field name="stop_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="arrival_time" widget="float_time"/>
                                    <field name="departure_time" widget="float_time"/>
                                    <field name="latitude" readonly="1" optional="show"/>
                                    <field name="longitude" readonly="1" optional="show"/>
                                </list>
                            </field>
                        </page>
                        <page string="Route Map">
                            <div class="o_transport_map_container">
                                <div class="alert alert-info" role="alert">
                                    <strong>Interactive Route Map</strong>
                                    <p>This map shows all stops along the route. The route is displayed in the order of the sequence field.</p>
                                    <p><strong>Center:</strong> Lat: <field name="map_center_lat" readonly="1"/>, Lon: <field name="map_center_lon" readonly="1"/></p>
                                </div>
                                <div style="margin-top: 20px;">
                                    <h4>Route Information</h4>
                                    <ul>
                                        <li><strong>Bus Number:</strong> <field name="bus_number" readonly="1"/></li>
                                        <li><strong>Total Distance:</strong> <field name="total_distance" readonly="1"/> km</li>
                                        <li><strong>Number of Stops:</strong> <field name="stop_ids" readonly="1" widget="statinfo" string="Stops"/></li>
                                    </ul>
                                </div>
                                <div id="route_map" style="height: 500px; width: 100%; margin-top: 20px; border: 2px solid #ddd; border-radius: 8px;">
                                    <field name="route_map_html" widget="html" readonly="1"/>
                                </div>
                            </div>
                        </page>
                        <page string="Route Geometry (JSON)">
                            <group>
                                <field name="route_geometry" widget="text"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_school_transport_stop_tree" model="ir.ui.view">
        <field name="name">school.transport.stop.tree</field>
        <field name="model">school.transport.stop</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="route_id"/>
                <field name="arrival_time" widget="float_time"/>
                <field name="departure_time" widget="float_time"/>
                <field name="latitude"/>
                <field name="longitude"/>
            </list>
        </field>
    </record>

    <record id="view_school_transport_stop_form" model="ir.ui.view">
        <field name="name">school.transport.stop.form</field>
        <field name="model">school.transport.stop</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="geocode_record" type="object" string="Geocode Stop" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="route_id"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="arrival_time" widget="float_time"/>
                            <field name="departure_time" widget="float_time"/>
                        </group>
                    </group>
                    <group string="Geocoding Information">
                        <group>
                            <field name="latitude" readonly="1"/>
                            <field name="longitude" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_school_transport_route" model="ir.actions.act_window">
        <field name="name">Transport Routes</field>
        <field name="res_model">school.transport.route</field>
        <field name="view_mode">list,form</field>
            <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No transport routes yet!
            </p>
            <p>
                Create bus routes with stops and visualize them on the map.
            </p>
        </field>
    </record>

    <record id="action_school_transport_stop" model="ir.actions.act_window">
        <field name="name">Route Stops</field>
        <field name="res_model">school.transport.stop</field>
        <field name="view_mode">list,form</field>
          <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No stops yet!
            </p>
            <p>
                Create stops for your bus routes.
            </p>
        </field>
    </record>

    <menuitem id="menu_school_transport" name="Transport" parent="menu_school_root"/>

    <menuitem id="menu_school_transport_routes"
              name="Routes"
              parent="menu_school_transport"
              action="action_school_transport_route"/>

    <menuitem id="menu_school_transport_stops"
              name="Stops"
              parent="menu_school_transport"
              action="action_school_transport_stop"/>
</odoo>